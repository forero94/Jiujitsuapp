<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <transition android:duration="200">
            <shape android:shape="oval">
                <solid android:color="#FFD700" /> <!-- Fondo dorado -->
                <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Borde blanco -->
            </shape>
        </transition>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Fondo normal -->
            <stroke android:width="2dp" android:color="#C0C0C0" /> <!-- Borde gris -->
        </shape>
    </item>
</selector>

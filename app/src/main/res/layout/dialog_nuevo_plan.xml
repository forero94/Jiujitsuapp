<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/containerCampos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título "Nuevo Plan" -->
        <TextView
            android:id="@+id/tvTituloDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Plan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- EditText de Acción Inicial (Verde) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAccionInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Acción Inicial"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/verde">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAccionInicial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/verde"
                android:textColor="@android:color/black"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contenedor para campos dinámicos -->
        <LinearLayout
            android:id="@+id/llCamposDinamicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- Botón Agregar -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNuevoPaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:contentDescription="Agregar Nuevo Paso"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/violeta"/>

        <!-- Botones de Guardar y Cerrar (Violeta) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:backgroundTint="@color/violeta"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <!-- Botón Cerrar -->
            <Button
                android:id="@+id/btnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:backgroundTint="@color/violeta"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
